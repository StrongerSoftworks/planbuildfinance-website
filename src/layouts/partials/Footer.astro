      <div class="row justify-between items-baseline">

        <div class="col-12 md:col-6 xl:col-3 mb-5 md:mb-0">
          <!-- <Logo src="/images/logo.png" /> -->
          <!-- <p
            class="text-light/75 mb-5"
            set:html={markdownify(footer_content)}
          /> -->
          <!-- social links -->
          <h4 class="text-white mb-6 text-h5 font-semibold">
            {follow_us_on}
          </h4>
          <Social source={social.main} className="social-icon-alt" />
        </div>

        <!-- licenses -->
        <div class="col-12 md:col-6 xl:col-3">
          <h4 class="text-white mb-4 text-h5 font-semibold">
            Certifications and Licenses 
          </h4>
          <ul>
            <li class="text-light/75 mb-3">Mortgage Agent Level 1 | License M25000323</li>
            <li class="text-light/75 mb-3">B.C.I.N. License #39688</li>
            <li class="text-light/75 mb-3">Professional Quantity Surveyor</li>
            <li class="text-light/75 mb-3">Member of the Canadian Institute of Quantity Surveyors</li>
            <li class="text-light/75 mb-3">Gold Seal Certified with the Canadian Construction Association</li>
            <li class="text-light/75 mb-3"></li>
          </ul>
        </div>

        <!-- service list -->
        <div class="col-12 md:col-6 xl:col-3 mt-5">
          <h4 class="text-white mb-4 text-h5 font-semibold">{about_us}</h4>
          <ul class="list-styled">
            {
              footer.map((menu: any) => (
                <li class="mb-3 text-light/75">
                  <a
                    class=" block"
                    href={`${slugSelector(menu.url, lang)}`}
                    set:html={markdownify(menu.name)}
                  />
                </li>
              ))
            }
          </ul>
        </div>

        <!-- contact info -->
        <div class="col-12 md:col-6 xl:col-3 mt-5">
          <h4 class="text-white mb-4 text-h5 font-semibold">
            {contact_info}
          </h4>
          <ul>
            <li class="text-light/75 mb-3">
              <a
                target="_blank"
                href={`https://www.google.com/maps?q=${encodeURIComponent(address)}`}
                set:html={markdownify(address)}
              />
            </li>
            <li class="text-light/75 mb-3">
              <a href={`tel:${phone}`} set:html={markdownify(phone)} />
            </li>
            <li class="text-light/75 mb-3">
              <a href={`mailto:${email}`} set:html={markdownify(email)} />
            </li>
          </ul>
        </div>

        <!-- Indi Mortgage info -->
