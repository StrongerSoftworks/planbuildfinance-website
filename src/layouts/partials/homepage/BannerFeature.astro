---
import DynamicIcon from "@/helpers/DynamicIcon";
import { markdownify } from "@/lib/utils/textConverter";
import BannerFeatureInner from "./BannerFeatureInner.astro";

const { bannerFeature } = Astro.props;
---

{
  bannerFeature?.enable && (
    <section class="mt-[-180px] lg:mt-[-200px] xl:mt-[-230px] relative z-10">
      <div class="container">
        <div class="flex flex-row flex-wrap justify-center gap-2">
          {bannerFeature.feature_item.map(
            (item: { name: string; content: string; icon: string; link: string }) => (
              <>
                {item.link ? (<a class="basis-full xl:basis-1/4 md:basis-1/3 group" href={item.link} aria-label={item.name}>
                  <BannerFeatureInner item={item} />
                </a>) : (<div class="basis-full xl:basis-1/4 md:basis-1/3 group">
                  <BannerFeatureInner item={item} />
                </div>)}
              </>
            ),
          )}
        </div>
      </div>
    </section>
  )
}
